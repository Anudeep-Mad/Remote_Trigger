<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jobs.vmware.com.remote_trigger">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DAO.AddRepository"
            android:label="Add_Domain"/>
        <activity
            android:name=".DAO.FolderActivity"
            android:label="Folders"/>
        <activity
            android:name=".DAO.WorkflowActivity"
            android:label="Workflows"/>
        <activity
            android:name=".DAO.Repository_popup"
            android:theme="@style/AppTheme.CustomTheme"
            android:label="Workflows"/>
        <activity
            android:name=".DAO.InstanceActivity"
            android:label="Instances"
            android:parentActivityName=".DAO.WorkflowActivity"/>
    </application>



</manifest>